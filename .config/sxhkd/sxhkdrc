# Close bspwm
super + alt + Escape
    bspc quit

# Close window
super + w
    bspc window -c

# Balance the surface area of all windows
super + b
    bspc desktop -B

# Toggle window fullscreen
super + f
    bspc window -t fullscreen

# Toggle window floating
super + s
    bspc window -t floating

# Toggle between current and last window
super + grave
    bspc window -f last

# Toggle between current and last desktop
super + Tab
    bspc desktop -f last

# Rotate windows
super + {comma,period}
    bspc desktop -C {backward,forward}

# Change desktops
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# Change desktops
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Cancel window or desktop preselections
super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

# Change window preselection
super + ctrl + {Left,Down,Up,Right}
    bspc window -p {left,down,up,right}

# Move window in a desktop
super + {_,shift + }{Left,Down,Up,Right}
    bspc window -{f,s} {left,down,up,right}

# Resizing windows
super + alt + {Left,Down,Up,Right}
    bspc window -e {left -10,down +10,up -10,right +10}

# Resizing windoes
super + alt + shift + {Left,Down,Up,Right}
    bspc window -e {right -10,up +10,down -10,left +10}

# Set splitting ratio
super + ctrl + {1-9}
    bspc window -r 0.{1-9}

# Click to focus
~button1
    bspc pointer -g focus

# Terminal
super + Return
    urxvt

# Run
super + space
    dmenu_run

# Reload sxhkd config
super + Escape
    pkill -USR1 -x sxhkd
    bspc window -{f,s} {left,down,up,right}

# Suspend
super + ctrl + shift + s
    i3lock -i ~/Wallpapers/W_2014_361_DARKWING.png -c 000000 -e && systemctl suspend

# Moving windows
super + button{1}
    bspc pointer -g move

# Moving windows
super + !button{1-3}
    bspc pointer -t %i %i

# Moving windows
super + @button{1-3}
    bspc pointer -u

# Music bindings
super + F11
    mpc prev

super + F12
    mpc next

super + F9
    mpc toggle


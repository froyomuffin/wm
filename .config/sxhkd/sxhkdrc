# Close bspwm
super + alt + Escape
    bspc quit

# Close window
super + w
    bspc node -c

# Balance the surface area of all windows
super + b
    bspc node @west -B; bspc node @south -B; bspc node @north -B; bspc node @east -B

# Set window state to tiled, pseudo_tiled, floating, fullscreen
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Toggle between current and last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# Focus or send to given desktops
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

# Change desktops
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Cancel window or desktop preselections
super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

# Change window preselection
super + ctrl + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# Move into preselection
# If the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Move selection or node in a desktop
super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

# Resizing windows
super + alt + {Left,Down,Up,Right}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Resizing windows
super + alt + shift + {Left,Down,Up,Right}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Set splitting ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Move/resize nodes
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

# End move/resize nodes
super + @button{1-3}
    bspc pointer -u

# Click to focus
~button1
    bspc pointer -g focus

# Terminal
super + Return
    urxvt

# Run
super + space
    dmenu_proxy_run

# Reload sxhkd config
super + Escape
    pkill -USR1 -x sxhkd

# Suspend
super + ctrl + shift + s
    i3lock -i /data/wallpapers/W_2014_361_DARKWING.png -c 000000 -e && systemctl suspend

# Music bindings
super + F11
    mpc prev

super + F12
    mpc next

super + F9
    mpc toggle

# Volume bindings
super + F8
    pactl set-sink-volume 0 +5%

super + alt + F8
    pactl set-sink-volume 0 +1%

super + F7
    pactl set-sink-volume 0 -5%

super + alt + F7
    pactl set-sink-volume 0 -1%

# Print screen
Print
    snapall

super + Print
    snap
